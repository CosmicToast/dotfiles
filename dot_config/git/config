[alias]
    aa = add -A
    ap = add -p
    bd = branch -D
    cs = commit --verbose --gpg-sign
    ci = commit --verbose
    co = checkout
    cb = checkout -b
    cp = commit --patch
    dc = diff --cached
    hr = reset --hard HEAD
    last = log -1 --stat
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
    pf = push --force
    st = status
    stat = diff --stat
