[alias]
	aa = add -A
	bd = branch -D
	ci = commit --verbose
	co = checkout
	cb = checkout -b
	dc = diff --cached
	st = status
	root = rev-parse --show-toplevel
[apply]
	whitespace = warn
[diff]
	algorithm = histogram
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
